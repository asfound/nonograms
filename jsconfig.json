{
  "compilerOptions": {
    "checkJs": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
